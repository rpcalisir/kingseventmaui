<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingsEventMAUI.Views.Startup.PhoneSignInPage"
             Title="PhoneSignInPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="30"
            VerticalOptions="Center"
            >
            <Picker 
                Title="Country Code"
                ItemsSource="{Binding Countries}"
                ItemDisplayBinding="{Binding CountriesWithCodes}"
                >
            </Picker>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>